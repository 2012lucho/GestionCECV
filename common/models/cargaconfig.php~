<?php
	namespace common\models;

	use yii\base\Model;
	use common\Configuracion;
	class Config extends Model
	{
		//"cod" de la configuraciÃ³n que se quiere recuperar
		public $Config;
				
		public function Valor(){
			if (($model = Configuracion::findOne($id)) !== null) 
			{
				return $model->valor;
			} else {
				return "";
			}
		}
			
	}
